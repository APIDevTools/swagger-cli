{
  "name": "swagger-cli",
  "version": "1.0.0-beta.1",
  "description": "Command-line tool to parse, validate, and serve Swagger-based REST APIs",
  "keywords": [
    "swagger",
    "rest",
    "api",
    "yaml",
    "parse",
    "parser",
    "validate",
    "validator",
    "validation",
    "serve",
    "host"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://github.com/BigstickCarpet"
  },
  "license": "MIT",
  "homepage": "https://github.com/BigstickCarpet/swagger-cli",
  "main": "lib/index.js",
  "scripts": {
    "build": "jshint . --verbose && jscs . --verbose",
    "test": "istanbul cover _mocha -- --recursive tests",
    "mocha": "mocha --recursive tests",
    "update-deps": "npm-check-updates -u && npm update",
    "release": "npm run update-deps && npm run build && npm test && bump --prerelease --tag --push --all && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BigstickCarpet/swagger-cli.git"
  },
  "devDependencies": {
    "istanbul": "^0.3.15",
    "coveralls": "^2.11.2",
    "mocha": "^2.2.5",
    "chai": "^3.0.0",
    "sinon": "^1.14.1",
    "jscs": "^1.13.1",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "mockery": "^1.4.0",
    "npm-check-updates": "^1.5.1",
    "version-bump-prompt": "^1.3.1"
  },
  "dependencies": {
    "chalk": "^1.0.0",
    "commander": "^2.8.1",
    "lodash": "^3.9.3",
    "swagger-parser": "^2.4.2",
    "swagger-server": "^1.0.0-alpha.7"
  },
  "contributors": [
    {
      "name": "James Messinger",
      "url": "http://jamesmessinger.com"
    },
    {
      "name": "Randall Krauskopf",
      "url": "https://github.com/rkrauskopf"
    }
  ],
  "bin": {
    "swagger": "bin/swagger.js"
  }
}
